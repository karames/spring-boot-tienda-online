/* Animaci贸n de entrada */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: none;
    }
}

.producto,
.pedido,
form {
    animation: fadeIn 0.7s;
}

.producto,
.pedido {
    background: #fff;
    margin: 1em auto;
    padding: 1em;
    border-radius: 8px;
    box-shadow: 0 1px 6px #0001;
    max-width: 500px;
}

.producto b,
.pedido b {
    color: #2a4d7a;
}

ul {
    padding-left: 1.2em;
}

/* Grid para productos */
.productos-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2em 1.5em;
