/* Responsive adjustments */
@media (max-width: 768px) {
    .carrito-container {
        position: relative;
        top: auto;
        right: auto;
        width: 100%;
        margin: 2em 0;
    }

    .producto-form {
        grid-template-columns: 1fr;
    }

    .pedido-item {
        grid-template-columns: 1fr;
        gap: 0.5em;
    }

    .form-actions {
        flex-direction: column;
    }

    .container {
        padding: 1em;
    }

    /* Mejoras adicionales para el men煤 responsive */
    .user-menu-btn {
        padding: 0.4em 1em 0.4em 0.8em;
        font-size: 0.9em;
        margin-left: 0.5em;
    }

    .user-menu-dropdown {
        min-width: 150px;
        font-size: 0.9em;
    }
}

@media (max-width: 480px) {
    .user-menu-dropdown {
        min-width: 160px;
        left: 50%;
        right: auto;
        transform: translateX(-50%) translateY(-10px);
    }

    .user-menu-dropdown.align-left {
        left: 50%;
        transform: translateX(-50%) translateY(-10px);
    }
}

@media (max-width: 320px) {
    .user-menu-dropdown {
        min-width: 140px;
        max-width: calc(100vw - 10px);
    }
}

/* Ajuste para evitar que el men煤 se corte en cualquier pantalla */
.user-menu {
    position: relative;
    display: inline-block;
    margin-left: auto;
    /* Asegurar que tenga espacio suficiente */
    min-width: fit-content;
}

.user-menu-dropdown button {
    width: 100%;
    background: none;
    border: none;
    color: #2a4d7a;
    font-size: 1em;
    padding: 0.9em 1.5em;
    text-align: left;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s ease;
    position: relative;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.6em;
}

.user-menu-dropdown button:before {
    content: '';
    font-size: 1.1em;
}

.user-menu-dropdown button:hover {
    background: linear-gradient(135deg, #fff2f2 0%, #ffebee 100%);
    color: #d32f2f;
    font-weight: 600;
    transform: translateX(5px);
}

.user-menu-dropdown button:hover:before {
    content: '';
    animation: wave 0.6s ease-in-out;
}

@keyframes wave {

    0%,
    100% {
        transform: rotate(0deg);
    }

    25% {
        transform: rotate(-10deg);
    }

    75% {
        transform: rotate(10deg);
    }
}

/* Efectos adicionales para el bot贸n de cerrar sesi贸n */
.user-menu-dropdown button:active {
    transform: translateX(3px) scale(0.98);
    transition: transform 0.1s ease;
}

.user-menu-dropdown button:focus {
    outline: 2px solid rgba(211, 47, 47, 0.3);
    outline-offset: 2px;
}

/* A帽adir efecto de pulse al bot贸n del men煤 cuando est谩 abierto */
.user-menu-btn.active {
    background: linear-gradient(135deg, #e3eaf6 0%, #f0f4f8 100%);
    border-color: #2a4d7a;
    box-shadow: 0 4px 12px rgba(42, 77, 122, 0.3);
}

/* Mejorar el icono del usuario */
.user-menu-btn>span:first-child {
    font-size: 1.1em;
    margin-right: 0.4em;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
}

/* Estilos de navegaci贸n */
.main-nav {
    background: #2a4d7a;
    padding: 1em 0.5em;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    position: relative;
}

.nav-center {
    display: flex;
    gap: 2em;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
    flex: 1;
}

#user-menu {
    margin-left: auto;
}

#auth-links {
    margin-left: auto;
    display: flex;
    gap: 1em;
}

.main-nav a,
#auth-links a {
    color: #fff;
    background: none;
    border: none;
    font-size: 1em;
    cursor: pointer;
    text-decoration: none;
    margin: 0 0.5em;
    transition: color 0.2s;
}

.main-nav a:hover,
#auth-links a:hover {
    color: #ffb347;
}

@media (max-width: 900px) {
    .nav-center {
        gap: 1em;
    }
}

@media (max-width: 600px) {
    .main-nav {
        flex-direction: column;
        align-items: stretch;
        gap: 0.5em;
    }

    .nav-center {
        flex-direction: column;
        gap: 0.5em;
    }

    #user-menu,
    #auth-links {
        margin-left: 0;
        justify-content: flex-end;
    }
}
