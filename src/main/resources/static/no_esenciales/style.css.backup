/* Reset b谩sico */
body {
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #f4f6fb;
    margin: 0;
    padding: 0;
    color: #222;
}

h1,
h2 {
    color: #2a4d7a;
    text-align: center;
}

nav {
    background: #2a4d7a;
    padding: 1em;
    display: flex;
    justify-content: center;
    gap: 2em;
}

nav a,
nav button {
    color: #fff;
    background: none;
    border: none;
    font-size: 1em;
    cursor: pointer;
    text-decoration: none;
    margin: 0 0.5em;
    transition: color 0.2s;
}

nav a:hover,
nav button:hover {
    color: #ffb347;
}

form {
    background: #fff;
    max-width: 350px;
    margin: 2em auto;
    padding: 2em 2em 1em 2em;
    border-radius: 10px;
    box-shadow: 0 2px 12px #0001;
    display: flex;
    flex-direction: column;
    gap: 1em;
}

input[type="text"],
input[type="password"],
input[type="email"] {
    padding: 0.7em;
    border: 1px solid #bfc9d1;
    border-radius: 5px;
    font-size: 1em;
    background: #f8fafc;
    transition: border 0.2s;
}

input:focus {
    border: 1.5px solid #2a4d7a;
    outline: none;
}

button[type="submit"],
button[type="button"],
.btn-principal {
    background: #2a4d7a;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 0.8em;
    font-size: 1em;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 0.5em;
}

button[type="submit"]:hover,
button[type="button"]:hover,
.btn-principal:hover {
    background: #1b3350;
}

form button[type="submit"],
form button[type="button"] {
    background: #2a4d7a;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 0.8em 1.2em;
    font-size: 1em;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s;
    margin-top: 0.5em;
    box-shadow: 0 1px 4px #0001;
}

form button[type="submit"]:hover,
form button[type="button"]:hover {
    background: #1b3350;
}

#loginerror,
.error {
    color: #d32f2f;
    text-align: center;
    margin-top: 0.5em;
}

/* Tarjetas de producto y pedido sin degradado */
.producto,
.pedido {
    background: #fff;
    margin: 1em auto;
    padding: 1.2em 1.5em;
    border-radius: 12px;
    box-shadow: 0 2px 12px #0002;
    max-width: 500px;
    transition: transform 0.15s, box-shadow 0.15s;
    position: relative;
}

.producto:hover,
.pedido:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 6px 24px #0003;
}

/* Badge de stock */
.badge-stock {
    display: inline-block;
    background: #2a4d7a;
    color: #fff;
    border-radius: 12px;
    font-size: 0.85em;
    padding: 0.2em 0.7em;
    margin-left: 0.5em;
    vertical-align: middle;
}

/* Mensajes de 茅xito y error */
.success {
    color: #388e3c;
    background: #e8f5e9;
    border: 1px solid #b2dfdb;
    border-radius: 6px;
    padding: 0.7em 1em;
    margin: 1em auto;
    max-width: 350px;
    text-align: center;
}

.error {
    color: #d32f2f;
    background: #ffebee;
    border: 1px solid #ffcdd2;
    border-radius: 6px;
    padding: 0.7em 1em;
    margin: 1em auto;
    max-width: 350px;
    text-align: center;
}

/* Bot贸n destacado y botones generales sin degradado */
.btn-principal,
button[type="submit"],
button[type="button"] {
    background: #2a4d7a !important;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 0.8em 1.2em;
    font-size: 1em;
    cursor: pointer;
    transition: background 0.2s, box-shadow 0.2s;
    margin-top: 0.5em;
    box-shadow: 0 1px 4px #0001;
}

.btn-principal:hover,
button[type="submit"]:hover,
button[type="button"]:hover {
    background: #1b3350 !important;
    box-shadow: 0 2px 8px #0002;
}

