    margin: 0;
}

/* Men煤 de usuario en la barra de navegaci贸n */
.user-menu {
    position: relative;
    display: inline-block;
    margin-left: auto;
}

.user-menu-btn {
    background: linear-gradient(135deg, #fff 0%, #f8fafb 100%);
    color: #2a4d7a;
    border: 2px solid #e1e8f0;
    border-radius: 25px;
    padding: 0.5em 1.3em 0.5em 1.1em;
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    box-shadow: 0 2px 8px rgba(42, 77, 122, 0.1);
    transition: all 0.3s ease;
    margin-left: 1em;
    position: relative;
    overflow: hidden;
}

.user-menu-btn:before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
    transition: left 0.5s;
}

.user-menu-btn:hover {
    background: linear-gradient(135deg, #e3eaf6 0%, #f0f4f8 100%);
    color: #1b3350;
    border-color: #2a4d7a;
    box-shadow: 0 4px 12px rgba(42, 77, 122, 0.2);
    transform: translateY(-1px);
}

.user-menu-btn:hover:before {
    left: 100%;
}

.user-menu-dropdown {
    display: none;
    position: absolute;
    right: 0;
    top: 110%;
    background: #fff;
    min-width: 180px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    border-radius: 12px;
    z-index: 100;
    padding: 0.8em 0;
    border: 1px solid #e1e8f0;
    opacity: 0;
    transform: translateY(-10px);
    animation: dropdownFadeIn 0.3s ease forwards;
    /* Evitar que se salga del viewport */
    max-width: calc(100vw - 20px);
    box-sizing: border-box;
}

/* Cuando el men煤 est谩 cerca del borde derecho, alinearlo a la izquierda */
.user-menu-dropdown.align-left {
    right: auto;
    left: 0;
}

/* Para pantallas peque帽as, ajustar el ancho del men煤 */
@media (max-width: 480px) {
    .user-menu-dropdown {
        min-width: 160px;
        left: 50%;
        right: auto;
        transform: translateX(-50%) translateY(-10px);
    }

    .user-menu-dropdown.align-left {
        left: 50%;
        transform: translateX(-50%) translateY(-10px);
    }
}

/* Mejoras responsivas para el men煤 */
@media (max-width: 768px) {
    .user-menu-btn {
        padding: 0.4em 1em 0.4em 0.8em;
        font-size: 0.9em;
        margin-left: 0.5em;
    }

    .user-menu-dropdown {
        min-width: 150px;
        font-size: 0.9em;
    }
}

@media (max-width: 320px) {
    .user-menu-dropdown {
        min-width: 140px;
        max-width: calc(100vw - 10px);
    }
}

@keyframes dropdownFadeIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Animaci贸n espec铆fica para men煤 alineado a la izquierda en m贸vil */
@keyframes dropdownFadeInCenter {
    to {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
    }
}

/* Aplicar la animaci贸n correcta seg煤n la posici贸n */
@media (max-width: 480px) {
    .user-menu-dropdown {
        animation: dropdownFadeInCenter 0.3s ease forwards;
    }
}

.user-menu-dropdown button {
    width: 100%;
    background: none;
    border: none;
    color: #2a4d7a;
    font-size: 1em;
    padding: 0.9em 1.5em;
    text-align: left;
    cursor: pointer;
    border-radius: 0;
    transition: all 0.3s ease;
    position: relative;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.6em;
}

.user-menu-dropdown button:before {
    content: '';
    font-size: 1.1em;
}

.user-menu-dropdown button:hover {
    background: linear-gradient(135deg, #fff2f2 0%, #ffebee 100%);
    color: #d32f2f;
    font-weight: 600;
    transform: translateX(5px);
}

.user-menu-dropdown button:hover:before {
    content: '';
    animation: wave 0.6s ease-in-out;
}

@keyframes wave {

    0%,
    100% {
        transform: rotate(0deg);
    }

    25% {
        transform: rotate(-10deg);
    }

    75% {
        transform: rotate(10deg);
    }
}

/* Efectos adicionales para el bot贸n de cerrar sesi贸n */
.user-menu-dropdown button:active {
    transform: translateX(3px) scale(0.98);
    transition: transform 0.1s ease;
}

.user-menu-dropdown button:focus {
    outline: 2px solid rgba(211, 47, 47, 0.3);
    outline-offset: 2px;
}

/* A帽adir efecto de pulse al bot贸n del men煤 cuando est谩 abierto */
.user-menu-btn.active {
    background: linear-gradient(135deg, #e3eaf6 0%, #f0f4f8 100%);
    border-color: #2a4d7a;
    box-shadow: 0 4px 12px rgba(42, 77, 122, 0.3);
}

/* Mejorar el icono del usuario */
.user-menu-btn>span:first-child {
    font-size: 1.1em;
    margin-right: 0.4em;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
}

